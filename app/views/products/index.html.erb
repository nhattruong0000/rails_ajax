<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="products">
    <%= render @products %>
  </tbody>
</table>
<br>
<br>
<br>
<%= form_for(@product, remote: true) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  <%= f.label :price %><br>
  <%= f.text_field :price %>
  <%= f.submit %>
<% end %>

<br>

<%= link_to 'New Product', new_product_path %>
