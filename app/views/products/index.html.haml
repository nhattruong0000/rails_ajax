%p#notice= notice
%h1 Products
%table
  %thead
    %tr
      %th Name
      %th Price
      %th{:colspan => "3"}
  %tbody#products
    -# - @products.each do |product|
    -#   = render partial: "product", locals: {product: product}
    = render @products
%br/
%br/
%br/
= form_for(@product, remote: true) do |f|
  = f.label :name
  %br/
  = f.text_field :name
  = f.label :price
  %br/
  = f.text_field :price
  = f.submit data: { "disable-with": "Saving..." }
%br/
= link_to 'New Product', new_product_path